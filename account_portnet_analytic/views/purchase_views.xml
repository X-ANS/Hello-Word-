<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <menuitem id="menu_procurement_management" name="OpÃ©rations"
            parent="purchase.menu_purchase_root" sequence="2"/>

        <record id="view_purchase_requisition_tree_inherit_purchase" model="ir.ui.view">
            <field name="name">purchase.requisition.tree.inherit</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_tree"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='name']" position="after">
                        <field name="n_oprations"/>
                        <field name="type_opration"/>
                        <field name="object_t"/>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="view_purchase_requisition_form_inherit_portnet" model="ir.ui.view">
            <field name="name">purchase.requisition.form.inherit.portnet</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form" />
            <field name="arch" type="xml">
                <field name="user_id" position="before">
                    <field name="type_opration"/>
                    <field name="n_oprations"/>
                </field>
            </field>
        </record>
        <record id="oprations_appled_offers" model="ir.actions.act_window">
            <field name="name">Appel d`offres</field>
            <field name="res_model">purchase.requisition</field>
            <field name="context">{}</field>
            <field name="domain">[('type_opration', '=', 'appel_offres')]</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <menuitem
            id="menu_purchase_requisition_oprations_appled"
            sequence="1"
            parent="menu_procurement_management"
            action="oprations_appled_offers"/>


        <record id="oprations_bons_de_comman" model="ir.actions.act_window">
            <field name="name">Bons de Commande</field>
            <field name="res_model">purchase.requisition</field>
            <field name="context">{}</field>
            <field name="domain">[('type_opration', '=', 'bons_de_comman')]</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <menuitem
            id="menu_purchase_requisition_oprations_bons_de_comman"
            sequence="2"
            parent="menu_procurement_management"
            action="oprations_bons_de_comman"/>

        <record id="oprations_contrat_cadre" model="ir.actions.act_window">
            <field name="name">Contrat cadre</field>
            <field name="res_model">purchase.requisition</field>
            <field name="context">{}</field>
            <field name="domain">[('type_opration', '=', 'contrat_cadre')]</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

